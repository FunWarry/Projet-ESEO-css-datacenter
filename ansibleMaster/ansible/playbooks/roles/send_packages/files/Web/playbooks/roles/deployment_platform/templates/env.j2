# Configuration de l'application
NODE_ENV=production
PORT=3000

# Configuration de la base de données
DB_HOST=localhost
DB_PORT=3306
DB_NAME=deployment_platform
DB_USER=deployment_user
DB_PASSWORD=your_secure_password

# Clé secrète pour les JWT
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=24h

# Configuration du stockage
UPLOAD_DIR=/var/lib/deployment_platform/uploads

# Configuration du proxy inverse
TRUST_PROXY=1

# Configuration des logs
LOG_LEVEL=info
LOG_FILE=/var/log/deployment_platform/app.log
